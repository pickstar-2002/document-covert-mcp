    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "document",
    "conversion",
    "word",
    "markdown",
    "pdf",
    "ai",
    "model-context-protocol"
