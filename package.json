    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
