    "fs-extra": "^11.2.0",
    "html-pdf": "^3.0.1",
    "html2canvas": "^1.4.1",
    "inquirer": "^9.2.12",
    "jspdf": "^3.0.1",
    "mammoth": "^1.6.0",
    "marked": "^9.1.6",
    "mime-types": "^2.1.35",
    "ora": "^7.0.1",
    "pandoc-filter": "^0.1.3",
    "pdf-parse": "^1.1.1",
    "turndown": "^7.1.2"
